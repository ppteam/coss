<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
    <appender name="PROJECT" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${coss.basic.logs}/jboss_stdout.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <param name="threshold" value="INFO"/>
        
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%X{requestURIWithQueryString}] %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
	
    <appender name="PROJECT-DEBUG" class="org.apache.log4j.RollingFileAppender">
        <param name="file" value="${coss.basic.logs}/coss-debug.log"/>
        <param name="append" value="false"/>
        <param name="encoding" value="UTF-8"/>
       
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d [%X{requestURIWithQueryString}] %-5p %c{2} - %m%n"/>
        </layout>
    </appender>	
	
	<!-- SQL -->
    <appender name="SQL" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${coss.basic.logs}/coss-sql.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
	<logger name="java.sql" additivity="false">
		#if("dev" == "${coss.basic.setting.mode}")
			<level value="DEBUG"/>
		#else
			<level value="WARN"/>
		#end
		<appender-ref ref="SQL"/>
	</logger>
	
	<!-- VELOCITY -->
    <appender name="VELOCITY" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${coss.basic.logs}/coss-velocity.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
	
	<!-- biz logger -->
	<appender name="BIZ" class="org.apache.log4j.DailyRollingFileAppender">
        <param name="file" value="${coss.basic.logs}/coss-biz.log"/>
        <param name="append" value="true"/>
        <param name="encoding" value="UTF-8"/>
        
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d %-5p %c{2} - %m%n"/>
        </layout>
    </appender>
	
	<root>
		#if("run" == "${coss.basic.setting.mode}")
			<level value="WARN"/>
		#else
			<level value="DEBUG"/>
		#end
		<appender-ref ref="PROJECT"/>
		<appender-ref ref="PROJECT-DEBUG"/>
		<appender-ref ref="ExceptionAppender" />
	</root>
</log4j:configuration>
