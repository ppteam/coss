<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN" 
						 "http://castor.org/mapping.dtd">
<mapping>
	<description>bean2xml mapping config</description>
	<class name="com.neusoft.core.web.XmlBeanModel">
		<map-to xml="root" />
		<field name="id" type="string">
			<bind-xml name="id" node="attribute" />
		</field>
		<field name="value" type="string">
			<bind-xml name="value" node="attribute" />
		</field>
		<field name="leaf" type="integer">
			<bind-xml name="leaf" node="attribute" />
		</field>
		<field name="fatherId" type="string">
			<bind-xml name="fatherId" node="attribute" />
		</field>
		<field name="deep" type="integer">
			<bind-xml name="deep" node="attribute" />
		</field>
		<field name="seq" type="integer">
			<bind-xml name="order" node="attribute" />
		</field>
		<field name="nodes" type="com.neusoft.core.web.XmlBeanModel"
			collection="arraylist">
			<bind-xml name="node" node="element" />
		</field>
	</class>
</mapping>